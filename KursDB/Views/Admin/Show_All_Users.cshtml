@model IEnumerable<KursDB.Models.Users_View>

@{
    ViewBag.Title = "Show_All_Users";
    Layout = "~/Views/Shared/MainMasterPage.cshtml";
}

<center>
    <h2>All Users</h2>

    <table class="table">
        <tr>
            <th>
                <p></p>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Surname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastEnter)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnterCount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.isAdmin)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            if ((int)Session["User_ID"] == item.User_ID)
            {
                <tr class="info">
                    <td>
                        @Html.DisplayFor(modelItem => item.Row)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastEnter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnterCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isAdmin)
                    </td>
                </tr>
        }
        else
        {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Row)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Surname)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastEnter)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.EnterCount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.isAdmin)
                    </td>
                @using (Html.BeginForm("ChangeAccess", "Admin"))
                {
                    <td>
                        <input type="hidden" name="id" value="@item.User_ID" />
                    </td>
                    <td>
                        <input type="submit" value="Change" />
                    </td>
                }
                </tr>
        }
        
        }

    </table>
</center>