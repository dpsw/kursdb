@model IEnumerable<KursDB.Models.Services_View>

@{
    ViewBag.Title = "Services_show";
    Layout = "~/Views/Shared/MainMasterPage.cshtml";
}

<center><h1>Services show</h1></center>

<center>
    <a class="btn btn-primary" data-toggle="modal" href="#myModal">Create New Service</a>
</center>
<br />

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit_Service", new { item.Service_ID}) |
                @Html.ActionLink("Delete", "Delete_Service", new { item.Service_ID, item.Title })
            </td>
        </tr>
    }
</table>

<div class="modal" style="background-color:whitesmoke" id="myModal">
    <div class="modal-header">
        <center>
            <h3 class="modal-title">Create New Service</h3>
        </center>
    </div>
    @using (Html.BeginForm("AddService", "Admin", FormMethod.Post))
    {
        <div class="modal-body">
            <center>
                <input class="form-control" name="Title" placeholder="Enter title of service...">
            </center>
        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-primary" value="Add" />
            <button class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
    }
</div>

<script type="text/javascript">
    $('#myModal').modal(options)
</script>
