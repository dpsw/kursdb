@model KursDB.Models.Guestbook

@{
    ViewBag.Title = "Edit_Note";
    Layout = "~/Views/Shared/MainMasterPage.cshtml";
}


<center>
    <h2>Edit Guestbook Note</h2>
    <br />

    @using (Html.BeginForm("EditNote", "Guestbook", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            @Html.ValidationSummary(true)

            <div class="form-group">
                @Html.LabelFor(model => model.Comment, new { @class = "control-label" })
                <div>
                    @Html.EditorFor(model => model.Comment)
                    @Html.ValidationMessageFor(model => model.Comment)
                </div>
            </div>

            <div class="form-group">
                <div>
                    <input type="hidden" name="idNote" value="@Model.Note_ID" />
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }
</center>
